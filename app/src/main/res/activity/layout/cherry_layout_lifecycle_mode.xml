<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:text="请选择图片上传方式"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/wallet_upload_idcard_capture_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginRight="40dp"
        android:text="相机"
        android:textSize="16sp"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"/>


    <TextView
        android:id="@+id/wallet_upload_idcard_picture_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:text="相册"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/wallet_upload_idcard_capture_tv"
        android:layout_toLeftOf="@+id/wallet_upload_idcard_capture_tv"
        android:textStyle="bold"/>

</RelativeLayout>